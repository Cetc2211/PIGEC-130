rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es Clínico
    function isClinico() {
      return request.auth.token.role == 'clinico';
    }

    // Colección de estudiantes: Datos generales visibles para usuarios autenticados.
    // La escritura está limitada a roles administrativos.
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if isClinico() || request.auth.token.role == 'admin';

      // SUBCOLECCIÓN CLÍNICA: Aquí residen los datos sensibles.
      // Solo accesible para el rol 'clinico' para lectura y escritura.
      match /clinical_records/{recordId} {
        allow read, write: if isClinico();
      }
    }

    // Repositorio de Baremos y Manuales (configuracion_pruebas)
    // Todos los usuarios autenticados pueden leer para que la app calcule resultados.
    // Solo el admin puede subir o modificar tablas de baremos.
    match /configuracion_pruebas/{testId} {
      allow read: if request.auth != null; 
      allow write: if request.auth.token.role == 'admin';
    }
  }
}
