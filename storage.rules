rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /stimuli/{allPaths=**} {
      // Permitimos lectura pública SOLO a la carpeta de estímulos para no comprometer el resto
      allow read: if true;
      allow write: if false; 
    }
    match /{allPaths=**} {
      // El resto del almacenamiento requiere autenticación
      allow read, write: if request.auth != null;
    }
  }
}
